<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
     
    </section>
  </aside>
  <div class="col-md-8">
      <h3>the list of followers (<%= @user.follower_users.count %>)</h3>
      <ul class="followers">
        <%= render partial: 'followers/follower', collection: @followers %>
      </ul>
  </div>
</div>