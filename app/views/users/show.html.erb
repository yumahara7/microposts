<page_entries_info 
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <div class="relationlink">
      <%= link_to "followings"  , followings_path(@user)%> (<%= @user.following_users.count %>)<br />
      <%= link_to "followers" , followers_path(@user)%>(<%= @user.follower_users.count %>)
      <%= link_to "favorite"     , favos_path(@user) %>
      </div>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
      <% @microposts.each do |micropost| %>
        <%= render partial: 'microposts/micropost', locals: { micropost: micropost } %>
      <% end %>
      </ol>
    <% end %>
    <%= paginate @microposts%>
  </div>
</div>
